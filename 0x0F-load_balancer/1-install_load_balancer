
#!/usr/bin/env bash
# install HAProxy and configure Load Balancer

apt-get -y install software-properties-common
add-apt-repository -y ppa:vbernat/haproxy-1.8
apt-get -y update
apt-get -y install haproxy
echo "\
frontend http\n\
\tmode http\n\
\tdefault_backend web_servers\n\n\
backend web_servers\n\
\tbalance roundrobin\n\
\tserver 1708-web-01 35.190.151.203:80 check\n\
\tserver 1708-web-02 54.167.86.179:80 check\n" >> /etc/haproxy/haproxy.cfg
echo "ENABLED=1" >> /etc/default/haproxy
service haproxy restart
